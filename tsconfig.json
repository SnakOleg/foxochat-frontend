{
	"extends": [
		"@tsconfig/strictest/tsconfig.json"
	],
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"isolatedModules": true,
		"moduleResolution": "bundler",
		"types": [
			"@rsbuild/core/types"
		],
		/* Preact Config */
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"noPropertyAccessFromIndexSignature": false,
		"paths": {
			"@/*": [
				"./src/*"
			],
			"react": [
				"./node_modules/preact/compat/"
			],
			"react-dom": [
				"./node_modules/preact/compat/"
			],
			"@components/*": [
				"./src/components/*"
			],
			"@icons/*": [
				"./src/assets/svg/*"
			],
			"@hooks/*": [
				"./src/hooks/*"
			],
			"@utils/*": [
				"./src/utils/*"
			],
			"@services/*": [
				"./src/services/*"
			],
			"@store/*": [
				"./src/store/*"
			],
			"@lib/*": [
				"./src/lib/*"
			],
			"@interfaces/*": [
				"./src/interfaces/*"
			]
		}
	},
	"include": [
		"src/**/*"
	]
}
